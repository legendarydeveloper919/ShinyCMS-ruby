<% return unless current_user.can? :list, :users %>

  <%= render_admin_menu_section( t( 'shinycms.admin.users.menu' ), 'people' ) do %>

    <%= component 'admin/menu/item', link: shinycms.users_path,
        text: t( 'shinycms.admin.users.index.title' ), icon: 'people' %>

    <%= component 'admin/menu/item', link: shinycms.new_user_path,
        text: t( 'shinycms.admin.users.new.title' ), icon: 'user-follow',
        if: current_user.can?( :add, :users ) %>

  <% end %>
