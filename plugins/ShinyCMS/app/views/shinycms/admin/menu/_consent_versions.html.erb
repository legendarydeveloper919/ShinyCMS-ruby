<% return unless current_user.can? :list, :consent_versions %>

  <%= render_admin_menu_section( t( 'shinycms.admin.consent_versions.menu' ), 'check' ) do %>

    <%= component 'admin/menu/item', link: shinycms.consent_versions_path,
        text: t( 'shinycms.admin.consent_versions.index.title' ), icon: 'check-alt' %>

    <%= component 'admin/menu/item', link: shinycms.consent_versions_path,
        text: t( 'shinycms.admin.consent_versions.new.title' ), icon: 'plus',
        if: current_user.can?( :add, :consent_versions ) %>

  <% end %>
