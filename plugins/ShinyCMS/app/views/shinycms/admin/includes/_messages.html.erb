<%= component 'admin/alert', message: flash[ :notice ], type: 'success' if flash[ :notice ] %>
<%= component 'admin/alert', message: flash[ :alert  ], type: 'danger'  if flash[ :alert  ] %>

<% @alert_types = {
  alert_primary:   'primary',
  alert_secondary: 'secondary',
  alert_light:     'light',
  alert_dark:      'dark',

  alert_danger:    'danger',
  alert_warning:   'warning',
  alert_success:   'success',
  alert_info:      'info'
} %>

<% @alert_types.each do |symbol, string| %>
  <%= component 'admin/alert', message: flash[ symbol ], type: string if flash[ symbol ] %>
<% end %>
