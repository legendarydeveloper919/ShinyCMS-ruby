<% return unless admin_user.can? :list, :users %>

<%= t( 'shinycms.admin.users.toolbar' ) %>:
<% if admin_user.can? :add, :users %>
  <%= link_to t( 'add'  ), shinycms.new_user_path %> /
<% end %>
<% if user_id.present? && admin_user.can?( :edit, :users ) %>
  <%= link_to t( 'edit' ), shinycms.edit_user_path( user_id ) %> /
<% end %>
<%= link_to t( 'list' ), shinycms.users_path %> |
