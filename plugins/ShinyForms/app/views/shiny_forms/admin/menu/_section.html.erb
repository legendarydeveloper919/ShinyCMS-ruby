<% return unless current_user.can? :list, :forms %>

  <%= render_admin_menu_section( t( 'shiny_forms.admin.forms.menu' ), 'spreadsheet' ) do %>

    <%= component 'admin/menu/item', link: shiny_forms.forms_path,
        text: t( 'shiny_forms.admin.forms.index.title' ), icon: 'list' %>

    <%= component 'admin/menu/item', link: shiny_forms.new_form_path,
        text: t( 'shiny_forms.admin.forms.new.title' ), icon: 'pencil',
        if: current_user.can?( :add, :forms ) %>

  <% end %>
