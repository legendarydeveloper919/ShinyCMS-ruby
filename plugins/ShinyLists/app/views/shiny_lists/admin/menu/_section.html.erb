<% return unless current_user.can? :list, :shiny_lists %>

  <%= render_admin_menu_section( t( 'shiny_lists.admin.shiny_lists.title' ), 'rss' ) do %>

    <%= render_admin_menu_item(
        t( 'shiny_lists.admin.shiny_lists.index.title' ), shiny_lists.shiny_lists_path, 'list' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :add, :shiny_lists ),
        t( 'shiny_lists.admin.shiny_lists.new.title' ), shiny_lists.new_shiny_lists_path, 'pencil' ) %>

<% end %>
