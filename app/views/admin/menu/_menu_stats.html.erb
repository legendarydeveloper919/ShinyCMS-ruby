<% return unless current_user.can?( :view_web,   :stats ) ||
                 current_user.can?( :view_email, :stats ) ||
                 current_user.can?( :use_blazer, :stats ) %>

  <%= render_admin_menu_section( t( 'admin.stats.title' ), 'chart' ) do %>

    <%= render_admin_menu_item_if( current_user.can?( :view_web, :stats ),
        t( 'admin.web_stats.title' ), web_stats_path, 'chart' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :view_email, :stats ),
        t( 'admin.email_stats.title' ), email_stats_path, 'chart' ) %>

    <%#= render_admin_menu_item_if( current_user.can?( :use_blazer, :stats ),
        t( 'admin.email_stats.title' ), blazer_path, 'chart' ) %>
  <% end %>
