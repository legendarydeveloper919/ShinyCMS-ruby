<% return unless current_user.admin_can?( :list, :pages          ) ||
                 current_user.admin_can?( :list, :page_templates ) %>

  <%= render_admin_menu_section( t( 'admin.pages.title' ), 'list-rich' ) do %>

    <%= render_admin_menu_item_if( current_user.admin_can?( :list, :pages ),
        t( 'admin.pages.index.title' ), pages_path, 'list-rich' ) %>

    <%= render_admin_menu_item_if( current_user.admin_can?( :add, :pages ),
        t( 'admin.pages.new.title' ), new_page_path, 'playlist-add' ) %>

    <%= render_admin_menu_item_if( current_user.admin_can?( :add, :page_sections ),
        t( 'admin.pages.sections.new.title' ), new_page_section_path, 'playlist-add' ) %>

    <%= render_admin_menu_item_if( current_user.admin_can?( :list, :page_templates ),
        t( 'admin.pages.templates.index.title' ), page_templates_path, 'library' ) %>

    <%= render_admin_menu_item_if( current_user.admin_can?( :add, :page_templates ),
        t( 'admin.pages.templates.new.title' ), new_page_template_path, 'library-add' ) %>

  <% end %>
