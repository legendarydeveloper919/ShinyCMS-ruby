<%= t( 'vote' ) %>:

<% if current_user&.voted_up_on?( comment ) %>
  <%= link_to t( 'remove_upvote' ),
              destroy_vote_path( 'comment', comment.id ), method: :delete %>
<% elsif current_user&.voted_down_on?( comment ) %>
  <%= link_to t( 'remove_downvote' ),
              destroy_vote_path( 'comment', comment.id ), method: :delete %>
<% else %>
  <%= link_to t( 'add_upvote' ),
              create_vote_path( 'comment', comment.id, 'up' ), method: :post %>
  /
  <%= link_to t( 'add_downvote' ),
              create_vote_path( 'comment', comment.id, 'down' ), method: :post %>
<% end %>

(<%= comment.get_upvotes.size %> / <%= comment.get_downvotes.size %>)
