<% if current_user_can?( :hide, :discussions ) || current_user_can?( :lock, :discussions ) %>
<div class="float-right smaller">
  Discussion:
  <% if discussion.hidden? %>
    <%= link_to t( 'show' ), show_discussion_path( discussion ) %>
  <% else %>
    <%= link_to t( 'hide' ), hide_discussion_path( discussion ) %>
  <% end %>
  /
  <% if discussion.locked? %>
    <%= link_to t( 'unlock' ), unlock_discussion_path( discussion ) %>
  <% else %>
    <%= link_to t( 'lock' ), lock_discussion_path( discussion ) %>
  <% end %>
</div>
<% end %>
