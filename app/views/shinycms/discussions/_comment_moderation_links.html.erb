<div class="float-right smaller">
Comment:
<% if comment.hidden? %>
  <%= link_to t( 'unhide' ), unhide_comment_path( comment.discussion.id, comment.number ) %>
<% else %>
  <%= link_to t( 'hide' ), hide_comment_path( comment.discussion.id, comment.number ) %>
<% end %>
/
<% if comment.locked? %>
  <%= link_to t( 'unlock' ), unlock_comment_path( comment.discussion.id, comment.number ) %>
<% else %>
  <%= link_to t( 'lock' ), lock_comment_path( comment.discussion.id, comment.number ) %>
<% end %>
<% if current_user_can?( :delete, :comments ) %>
/
  <%= link_to t( 'delete' ), delete_comment_path( comment.discussion.id, comment.number ),
      method: :delete, data: { confirm: t( 'are_you_sure' ) } %>
<% end %>
</div>
